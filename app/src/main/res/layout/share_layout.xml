<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ret_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/share_notiecH"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/popshare_bg">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="11dp"
            android:text="超胆波挑战 街头撩妹高手"
            android:textColor="#FF202123"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/share"
            android:focusable="false"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/title"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5.8dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/ico_03_fenxiang_up" />

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_toRightOf="@+id/share"
            android:text="快来邀请你的朋友来挑战吧～"
            android:textColor="#FF70737F"
            android:textSize="13sp" />

        <LinearLayout
            android:id="@+id/bottomlinear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/content"
            android:layout_marginTop="12dp"
            android:background="@drawable/popsharebottom_bg"
            android:gravity="center_vertical"
            android:paddingBottom="13dp"
            android:paddingTop="13dp">

            <ImageView
                android:id="@+id/share_wx"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ico_fxweixinxz" />

            <ImageView
                android:id="@+id/share_py"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ico_fxpyqxz" />

            <ImageView
                android:id="@+id/share_qq"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ico_fxwqqxz" />

            <ImageView
                android:id="@+id/share_sin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ico_fxweiboxz" />

            <ImageView
                android:id="@+id/share_zone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ico_fxkongjianxz" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>